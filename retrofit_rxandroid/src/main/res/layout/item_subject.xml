<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
    >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:id="@+id/picture_iv"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                />

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginLeft="10dp"
               android:orientation="vertical">
               <TextView
                   android:id="@+id/title_tv"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="标题"/>

               <TextView
                   android:id="@+id/score_tv"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="4dp"
                   android:text="1/10"/>

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="4dp"
                   android:text="导演"/>
               <View
                   android:layout_width="match_parent"
                   android:layout_height="1px"
                   android:background="@color/lightgray"></View>
               <com.hanbing.retrofit_rxandroid.view.StarLayout
                   android:id="@+id/directorLayout"
                   android:layout_marginTop="4dp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"></com.hanbing.retrofit_rxandroid.view.StarLayout>

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="4dp"
                   android:text="主演"/>
               <View
                   android:layout_width="match_parent"
                   android:layout_height="1px"
                   android:background="@color/lightgray"></View>

               <com.hanbing.retrofit_rxandroid.view.StarLayout
                   android:id="@+id/castLayout"
                   android:layout_marginTop="4dp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"></com.hanbing.retrofit_rxandroid.view.StarLayout>
           </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>
