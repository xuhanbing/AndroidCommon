<resources>


    <style name="NumberPickerStyle">
        <item name="android:textAppearance">?android:attr/textAppearance</item>
        <item name="android:orientation">vertical</item>
        <item name="android:fadingEdge">vertical</item>
        <item name="android:fadingEdgeLength">50dip</item>
        <item name="solidColor">@android:color/transparent</item>
        <item name="textColor">@android:color/black</item>
        <item name="selectionDividerHeight">2dip</item>
        <item name="internalMinWidth">64dip</item>
        <item name="internalMaxHeight">180dip</item>
    </style>

    <style name="SwipeBackLayoutStyle">
        <item name="thresholdRatio">0.5</item>
        <item name="nestingScrollRatio">0.2</item>
        <item name="nestingScrollEnabled">false</item>
        <item name="shadowDrawable">@drawable/shadow_left</item>
        <item name="dimColor">#88000000</item>
        <item name="swipeScrollDuration">500</item>
        <item name="finishActivityEnabled">true</item>
        <item name="onlyScrollIfTouchEdge">true</item>
    </style>
</resources>
