<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Copy one of these attributes to your own theme (choose either dark or light).
        <item name="numberPickerStyle">@style/NPWidget.Holo.NumberPicker</item>
        <item name="numberPickerStyle">@style/NPWidget.Holo.Light.NumberPicker</item>
    -->

    <!-- Don't touch this -->
    <attr name="numberPickerStyle" format="reference" />

    <declare-styleable name="NumberPicker">
        <!-- @hide Color for the solid color background if such for optimized rendering. -->
        <attr name="solidColor" format="color|reference" />
        <!-- @hide The divider for making the selection area. -->
        <attr name="selectionDivider" format="reference" />
        <!-- @hide The height of the selection divider. -->
        <attr name="selectionDividerHeight" format="dimension" />
        <!-- @hide The distance between the two selection dividers. -->
        <attr name="selectionDividersDistance" format="dimension" />
        <!-- @hide The min height of the NumberPicker. -->
        <attr name="internalMinHeight" format="dimension" />
        <!-- @hide The max height of the NumberPicker. -->
        <attr name="internalMaxHeight" format="dimension" />
        <!-- @hide The min width of the NumberPicker. -->
        <attr name="internalMinWidth" format="dimension" />
        <!-- @hide The max width of the NumberPicker. -->
        <attr name="internalMaxWidth" format="dimension" />
        <!-- @hide The layout of the number picker. -->
        <attr name="internalLayout" format="reference" />
        <!-- @hide The drawable for pressed virtual (increment/decrement) buttons. -->
        <attr name="virtualButtonPressedDrawable" format="reference" />
        <!-- textcolor -->
        <attr name="textColor" format="color|reference" />
    </declare-styleable>

    <declare-styleable name="RoundImageView">
        <!-- The width of border, or 0 if you do not want -->
        <attr name="borderSize" format="dimension"></attr>
        <!--The color of border -->
        <attr name="borderColor" format="color"></attr>
        <!--The type of round image view. u can use it as a circle image view if you set type as circle-->
        <attr name="type" format="enum">
            <enum name="CIRCLE" value="0"></enum>
            <enum name="ROUND" value="1"></enum>
        </attr>
        <!-- The radius of round corner, or 0 if you do not want-->
        <attr name="radius" format="dimension"></attr>

    </declare-styleable>

    <declare-styleable name="SearchView">
        <attr name="clearIcon" format="reference"></attr>
        <attr name="searchIcon" format="reference"></attr>
        <attr name="searchText" format="string|reference"></attr>
        <attr name="searchHint" format="string|reference"></attr>
        <attr name="searchTextColor" format="color|reference"></attr>
        <attr name="searchTextColorHint" format="color|reference"></attr>
        <attr name="searchTextSize" format="dimension"></attr>
        <attr name="searchTextBackground" format="reference"></attr>
    </declare-styleable>

    <declare-styleable name="TabWidget">
        <attr name="mode" format="enum">
            <!-- use default size.if content is not fill container, use fill mode -->
            <enum name="none" value="0"></enum>
            <!-- set each tab equal size  -->
            <enum name="fill" value="1"></enum>
        </attr>


    </declare-styleable>

    <declare-styleable name="TabStripWidget">
        <!-- If show strip or not.Default is true -->
        <attr name="showStrip" format="boolean"></attr>

        <!-- If scroll when select tab or content scroll. Default is true -->
        <attr name="enableStripScroll" format="boolean"></attr>

        <!-- If strip scroll follow content.such as when viewpager scroll. Default is true-->
        <attr name="enableStripScrollFollowContent" format="boolean"></attr>

        <!-- animator duration when select tab -->
        <attr name="scrollDuration" format="integer"></attr>
    </declare-styleable>

    <declare-styleable name="UnderlineTabWidget">

        <!-- Strip size.Height if horizontal, width otherwise -->
        <attr name="stripSize" format="dimension"></attr>

        <!-- Strip padding left and right when tabwidget is horizontal or padding top and bottom  otherwise -->
        <attr name="stripPadding" format="dimension"></attr>

        <!-- strip drawable -->
        <attr name="stripDrawable" format="color|reference"></attr>

        <!-- strip track background -->
        <attr name="stripTrackBackground" format="color|reference"></attr>

        <attr name="stripGrivaty" format="enum">
            <enum name="start" value="0"></enum>
            <enum name="end" value="1"></enum>
        </attr>
    </declare-styleable>

    <declare-styleable name="FloatLayout">
        <!-- each child padding, will override below values -->
        <attr name="floatPadding" format="dimension"></attr>

        <!-- horizontal padding  -->
        <attr name="floatPaddingHorizontal" format="dimension"></attr>

        <!-- vertical padding -->
        <attr name="floatPaddingVertical" format="dimension"></attr>

        <attr name="floatGravity">
            <flag name="left" value="0x01"></flag>
            <flag name="right" value="0x02"></flag>
            <flag name="top" value="0x04"></flag>
            <flag name="bottom" value="0x08"></flag>
            <flag name="center_horizontal" value="0x10"></flag>
            <flag name="center_vertical" value="0x20"></flag>
            <flag name="center" value="0x30"></flag>
        </attr>

    </declare-styleable>


    <declare-styleable name="SwitchButton">

        <attr name="thumbDrawable" format="reference"></attr>
        <attr name="openBackground" format="reference"></attr>
        <attr name="closeBackground" format="reference"></attr>
    </declare-styleable>
</resources>
