<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="RoundImageView">
        <!-- The width of border, or 0 if you do not want -->
        <attr name="borderSize" format="dimension"></attr>
        <!--The color of border -->
        <attr name="borderColor" format="color"></attr>
        <!--The type of round image view. u can use it as a circle image view if you set type as circle-->
        <attr name="type" format="enum">
            <enum name="CIRCLE" value="0"></enum>
            <enum name="ROUND" value="1"></enum>
        </attr>
        <!-- The radius of round corner, or 0 if you do not want-->
        <attr name="radius" format="dimension"></attr>

    </declare-styleable>


    <declare-styleable name="FloatLayout">
        <!-- each child padding, will override below values -->
        <attr name="floatPadding" format="dimension"></attr>

        <!-- horizontal padding  -->
        <attr name="floatPaddingHorizontal" format="dimension"></attr>

        <!-- vertical padding -->
        <attr name="floatPaddingVertical" format="dimension"></attr>

        <attr name="floatGravity">
            <flag name="left" value="0x01"></flag>
            <flag name="right" value="0x02"></flag>
            <flag name="top" value="0x04"></flag>
            <flag name="bottom" value="0x08"></flag>
            <flag name="center_horizontal" value="0x10"></flag>
            <flag name="center_vertical" value="0x20"></flag>
            <flag name="center" value="0x30"></flag>
        </attr>

    </declare-styleable>


    <declare-styleable name="SwitchButton">
        <attr name="thumbDrawable" format="reference"></attr>

    </declare-styleable>

    <declare-styleable name="PinnedLinearLayout">
        <attr name="pinnedViewId" format="integer"></attr>
    </declare-styleable>

    <attr name="swipeBackLayoutStyle" format="reference"/>

    <declare-styleable name="SwipeBackLayout">
        <attr name="thresholdRatio" format="float"></attr>
        <attr name="nestingScrollRatio" format="float"></attr>
        <attr name="nestingScrollEnabled" format="boolean"></attr>
        <attr name="swipeScrollDuration" format="integer"></attr>
        <attr name="shadowDrawable" format="color|reference"></attr>
        <attr name="dimColor" format="color|reference"></attr>
        <attr name="finishActivityEnabled" format="boolean"></attr>
        <attr name="onlyScrollIfTouchEdge" format="boolean"></attr>
    </declare-styleable>

    <declare-styleable name="ExpandableTextView">
        <attr name="expandTextViewId" format="integer"></attr>
        <attr name="expandArrowId" format="integer"></attr>
        <attr name="expandAnimationEnabled" format="boolean"></attr>
    </declare-styleable>

    <declare-styleable name="SlideMenuLayout">
        <attr name="leftMenuWidthPercent" format="float"></attr>
        <attr name="rightMenuWidthPercent" format="float"></attr>
        <attr name="judgeRatio" format="float"></attr>
        <attr name="contentViewId" format="integer"></attr>
        <attr name="leftMenuId" format="integer"></attr>
        <attr name="rightMenuId" format="integer"></attr>
    </declare-styleable>
</resources>
