<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="InsuranceAreaPickerStyle" parent="NumberPickerStyle">
        <item name="inputTextEnabled">false</item>
        <item name="textColor">@color/blue</item>
        <item name="selectorWheelTextColor">@color/black</item>
        <item name="selectionDividerHeight">1dip</item>
        <item name="selectionDivider">@color/black</item>
        <item name="selectionDividersDistance">30dp</item>
        <item name="internalMaxHeight">120dp</item>
        <item name="wrapSelectorWheelEnabled">false</item>
        <item name="selectorWheelItemCount">4</item>
        <item name="selectorWheelMiddleItemIndex">1</item>
    </style>
</resources>
