<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_tab_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hanbing.demo.activity.TabLayoutActivity">

    <!--<android.support.design.widget.TabLayout-->
        <!--android:id="@+id/tabLayout"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="44dp"></android.support.design.widget.TabLayout>-->
    <com.hanbing.library.android.view.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:tabIndicatorColor="@color/black"></com.hanbing.library.android.view.TabLayout>
    <com.hanbing.library.android.view.tab.UnderlineTabWidget
        android:id="@+id/tabWidget"
        android:layout_width="match_parent"
        android:layout_height="44dp"></com.hanbing.library.android.view.tab.UnderlineTabWidget>
    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v4.view.ViewPager>
</LinearLayout>
