<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="@dimen/titlebar_height"
    android:background="@color/main_color"
    android:padding="@dimen/dip_8"
    android:gravity="center_vertical">


    <LinearLayout
        android:id="@+id/layout_home_titlebar_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_home_titlebar_city"
            android:text="杭州杭州杭州"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="@dimen/dip_60"
            android:singleLine="true"
            android:ellipsize="end"/>

        <ImageView
            android:layout_width="@dimen/dip_15"
            android:layout_height="@dimen/dip_15"
            android:src="@drawable/title_home_arrow_down"/>
    </LinearLayout>




    <LinearLayout
        android:id="@+id/layout_home_titlebar_search"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/main_home_topbar_search"
        android:layout_marginLeft="@dimen/dip_8"
        android:layout_marginRight="@dimen/dip_8"
        android:padding="@dimen/dip_4"
        >

        <ImageView
            android:layout_width="@dimen/dip_15"
            android:layout_height="@dimen/dip_15"
            android:layout_gravity="center_vertical"
            android:src="@drawable/main_ic_home_search"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="@color/main_color"
            android:layout_marginLeft="@dimen/dip_4"
            android:text="输入商户名、地点"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_home_titlebar_add"
        android:layout_width="@dimen/dip_24"
        android:layout_height="@dimen/dip_24"
        android:src="@drawable/main_home_navibar_icon_add"/>
</LinearLayout>